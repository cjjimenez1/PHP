        <?php
            //Esto pinta una tabla con los numeros del 1 al 100 en 10 filas y 10 columnas
            $n=1;
            for ($i=1;$i<=10;$i++){
               echo "<tr>";
               echo "<td> fila nº $i</td>";
               for ($j=1;$j<=10;$j++){
                if (($n%2)==0){              
                    echo "<td bgcolor='red'>";//sombreado rojo a los multiplos de 2
                }
                else if (($n%3)==0){//resto de la division entre 3 igual a 0
                    echo "<td bgcolor='green'>";//sombreado verde a los multiplos de 3
                }
                else {
                    echo "<td>";
                }
                echo "nº $n";
                echo "</td>";
                $n++;
               
               }
            //echo "<td>este es el fin de linea</td>";
            echo "</tr>";
            
            }

            //echo "hola";
